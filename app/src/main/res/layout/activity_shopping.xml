<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShoppingActivity"
    android:layout_margin="25dp"
    android:background="#e5d08f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_gravity="left" />

        <EditText
        android:id="@+id/qty"
        android:layout_width="68dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        android:hint="QTY"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Add to Cart" />

    <Button
        android:id="@+id/checkbtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Checkout" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

    <LinearLayout
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemsview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Shopping List" />

        <LinearLayout
            android:id="@+id/even_queue"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#b19cd9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/even_item_qty"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="24dp"
                style="bold"/>

            <TextView
                android:id="@+id/even_item_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Name of Item"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/even_item_price"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="24dp"
                style="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/odd_queue"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/odd_item_qty"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="24dp"
                style="bold"/>

            <TextView
                android:id="@+id/odd_item_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:text="Name of Item"
                />

            <TextView
                android:id="@+id/odd_item_price"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="24dp"
                android:layout_gravity="right"
                style="bold"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/totalview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Total:" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textSize="24dp"
            android:layout_gravity="right"
            style="bold"/>


    </LinearLayout>

</LinearLayout>